<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基金净值"
            android:textColor="@android:color/white"
            android:background="@drawable/title_backround"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/TextView1"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/add_subscription"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/TextView1"
            android:layout_margin="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/title2"
        >
        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rb_all"
                android:button="@null"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:textColor="@color/main_radio_text_selector"
                android:background="@drawable/main_radio_selector"
                android:checked="true"
                android:text="全部"
                android:gravity="center"
                />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rb_stock"
                android:button="@null"
                android:textColor="@color/main_radio_text_selector"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/main_radio_selector"
                android:text="股票"
                android:gravity="center" />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rb_mixed"
                android:button="@null"
                android:textColor="@color/main_radio_text_selector"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/main_radio_selector"
                android:text="混合"
                android:gravity="center" />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rb_bond"
                android:button="@null"
                android:textColor="@color/main_radio_text_selector"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="债券"
                android:background="@drawable/main_radio_selector"
                android:gravity="center" />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rb_currency"
                android:textColor="@color/main_radio_text_selector"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:button="@null"
                android:background="@drawable/main_radio_selector"
                android:text="货币"
                android:gravity="center"  />
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/bt_range"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/fund_da_tab2_bg"
            android:onClick="clickRange"
            android:text="日涨跌幅  " />
        <Button
            android:id="@+id/bt_netvalue"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/bt_range"
            android:background="@drawable/fund_da_tab2_bg"
            android:onClick="clickNet"
            android:text="最新净值  " />
        <Button
            android:id="@+id/bt_fund"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/bt_netvalue"
            android:background="@drawable/fund_da_tab2_bg"
            android:text="基金名称 " />
        <ImageView
            android:id="@+id/iv_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/down"
            android:layout_marginRight="-90dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bt_range"
            />
        <ImageView
            android:id="@+id/iv_netValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left2"
            android:layout_marginRight="-93dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bt_netvalue"
            />
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/pb_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/id_swipe_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ListView
            android:id="@+id/lv_fundinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/webviewtab_bg"
        android:layout_marginTop="-50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <Button
                android:id="@+id/bt_prev_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/title_btn_selector"
                android:drawableLeft="@drawable/pre"
                android:onClick="prevPage"
                android:text="上一页  " />

            <TextView
                android:id="@+id/tv_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1/2"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                />
            <Button
                android:id="@+id/bt_next_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/title_btn_selector"
                android:drawableRight="@drawable/next"
                android:onClick="nextPage"
                android:text="  下一页" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

